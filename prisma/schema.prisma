// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastrado {
  nome     String
  telefone String
  email    String   @unique @id
  senha    String

  @@map("cadastrado")
}

model Tarefa {
  id        Int     @unique @id @default(autoincrement())
  nome      String
  descricao String
  inicio    DateTime @default(now())
  estado    String

  @@map("tarefa")
}

model Quadro {
  id        Int     @unique @id @default(autoincrement())
  nome      String
  descricao String

  @@map("quadro")
}
